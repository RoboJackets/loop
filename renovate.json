{
    "extends": [
        "config:recommended",
        ":disableMajorUpdates"
    ],
    "prConcurrentLimit": 1,
    "prHourlyLimit": 0,
    "rebaseWhen": "behind-base-branch",
    "automerge": true,
    "platformAutomerge": true,
    "poetry": {
        "major": {
            "enabled": true
        }
    },
    "docker-compose": {
        "enabled": false
    },
    "github-actions": {
        "major": {
            "enabled": true
        }
    },
    "lockFileMaintenance": {
        "enabled": true,
        "schedule": [
            "before 4pm every weekday except before 9am every weekday"
        ]
    },
    "timezone": "America/New_York",
    "schedule": [
        "before 4pm every weekday except before 9am every weekday"
    ],
    "ignoreDeps": [
        "ubuntu"
    ],
    "packageRules": [
        {
            "matchCategories": [
                "php"
            ],
            "rangeStrategy": "replace",
            "lockFileMaintenance": {
                "enabled": true,
                "schedule": [
                    "before 4pm every weekday except before 9am every weekday"
                ]
            },
            "matchDepNames": [
                "php"
            ]
        },
        {
            "matchCategories": [
                "php"
            ],
            "rangeStrategy": "pin",
            "lockFileMaintenance": {
                "enabled": true,
                "schedule": [
                    "before 4pm every weekday except before 9am every weekday"
                ]
            },
            "matchDepTypes": [
                "require-dev"
            ],
            "prPriority": -1
        },
        {
            "matchCategories": [
                "php"
            ],
            "rangeStrategy": "pin",
            "lockFileMaintenance": {
                "enabled": true,
                "schedule": [
                    "before 4pm every weekday except before 9am every weekday"
                ]
            },
            "prPriority": 1,
            "matchPackageNames": [
                "/^spatie//"
            ]
        },
        {
            "matchCategories": [
                "php"
            ],
            "rangeStrategy": "pin",
            "lockFileMaintenance": {
                "enabled": true,
                "schedule": [
                    "before 4pm every weekday except before 9am every weekday"
                ]
            },
            "prPriority": 2,
            "matchPackageNames": [
                "/^laravel//"
            ]
        },
        {
            "matchCategories": [
                "php"
            ],
            "rangeStrategy": "pin",
            "lockFileMaintenance": {
                "enabled": true,
                "schedule": [
                    "before 4pm every weekday except before 9am every weekday"
                ]
            },
            "matchDepNames": [
                "laravel/framework"
            ],
            "prPriority": 3
        },
        {
            "matchCategories": [
                "js"
            ],
            "enabled": false
        },
        {
            "matchCategories": [
                "docker"
            ],
            "major": {
                "enabled": true
            }
        }
    ]
}
